<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authorization">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/_bg__iphone_se___1_ek2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/_bg__iphone_se___1_ek2_shape" />

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/rectangle_1_shape" />

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/rectangle_1_shape" />

        <ImageView
            android:id="@+id/ellipse_6"
            android:layout_width="410dp"
            android:layout_height="311dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="490dp"
            android:contentDescription="ellipse_6"
            android:src="@drawable/ellipse_6"
            android:visibility="visible" />

        <View
            android:id="@+id/ellipse_3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/ellipse_3_shape" />

        <View
            android:id="@+id/ellipse_2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/ellipse_2_shape" />

        <ImageView
            android:id="@+id/ellipse_4"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="102dp"
            android:contentDescription="ellipse_4"
            android:src="@drawable/ellipse_4" />

        <ImageView
            android:id="@+id/ellipse_5"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="102dp"
            android:contentDescription="ellipse_5"
            android:src="@drawable/ellipse_5" />

        <TextView
            android:id="@+id/collabhub"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/ultra"
            android:text="Collabhub"
            android:textColor="@color/_bg__iphone_se___1_ek2_color"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/polygon_2"
            android:layout_width="59dp"
            android:layout_height="90dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="100dp"
            android:contentDescription="polygon_2"
            android:src="@drawable/polygon_2" />

        <ImageView
            android:id="@+id/polygon_1"
            android:layout_width="59dp"
            android:layout_height="90dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:contentDescription="polygon_1"
            android:src="@drawable/polygon_1" />


        <EditText
            android:id="@+id/email_et"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="300dp"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Email" />

        <EditText
            android:id="@+id/pass_et"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="400dp"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Пароль"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/rectangle_6_shape"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Войти" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/go_to_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="120dp"
                android:layout_marginTop="550dp"
                android:text="Зарегистрироваться"
                android:textColor="@color/white" />
        </LinearLayout>






    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>